<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Background Image -->

    <!-- Menu Bar (Top Center) -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/menu_bar_1"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button (Bottom-Left) -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_button"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Continue Button (Bottom-Right) -->
    <ImageView
        android:id="@+id/continue_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/button_continue"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Balloon Selection Grid (2 Rows x 3 Columns) -->
    <GridLayout
        android:id="@+id/balloon_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/menu_bar"
        app:layout_constraintBottom_toTopOf="@id/continue_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Balloon 1 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/card_base_not_selected_new"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unicorn_not_selected_new"
                android:layout_gravity="top|end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_not_selected_new"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="15dp" />
        </FrameLayout>

        <!-- Balloon 2 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/card_base_not_selected_new"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ariel_not_selected_new"
                android:layout_gravity="top|end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_not_selected_new"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="15dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:contentDescription="Balloon Button"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <!-- Balloon 3 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/card_base_not_selected_new"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goodboy_not_selected_new"
                android:layout_gravity="top|end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_not_selected_new"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="15dp" />
        </FrameLayout>

        <!-- Balloon 4 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/card_base_not_selected_new"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loveu_not_selected_new"
                android:layout_gravity="top|end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_not_selected_new"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="15dp" />
        </FrameLayout>

        <!-- Balloon 5 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/card_base_not_selected_new"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dino_not_selected_new"
                android:layout_gravity="top|end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_not_selected_new"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="15dp" />
        </FrameLayout>

        <!-- Balloon 6 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/card_base_not_selected_new"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bdayjoy_not_selected_new"
                android:layout_gravity="top|end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/price_not_selected_new"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="15dp" />
        </FrameLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>